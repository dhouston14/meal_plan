


<div class="edit_food">
<h1><%= @food.food_type %> </h1>

<%= form_for @food do |f| %>

  <h2><%= f.label :food_type %></h2>
  <%= f.text_field :food_type %>

  <h2><%= f.label :calories %></h2>
  <%= f.text_field :calories%>

  <h2><%= f.label :img_url %></h2>
  <%= f.text_field :img_url %>

  <h2><%= f.label :describe %><h2>
  <%= f.text_field :describe %>

<br>
<br>
  <%= f.submit %>
<% end %>

<%= form_for @food, method: :delete do |f| %>
  <%= f.submit "Delete!", class: "delete" %>
<% end %>
</div>
